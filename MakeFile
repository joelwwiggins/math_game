# Makefile for Python project

# Variables
PIP = pip
BLACK = black
PYLINT = pylint
PYTEST = pytest

# Install dependencies (now handled in Dockerfile)
install:
	@echo "Dependencies installed via Docker."

# Lint the code
lint:
	$(PYLINT) MATH_GAME 

# Format the code
format:
	$(BLACK)  MATH_GAME

# Run tests
test:
	$(PYTEST) test_app.py

# Clean up (not needed for Docker)
clean:
	@echo "Clean up handled by Docker."
	
# Phony targets
.PHONY: install lint format test clean